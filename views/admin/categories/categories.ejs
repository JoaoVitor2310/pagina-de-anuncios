<%- include ('../../partials/header.ejs') %>
<body>
    <%- include ('../../partials/navbar.ejs') %>
    <div class="container">
        
        <h1>Categorias</h1>
        <a href="/admin/categories/new" class="btn btn-success"> Criar nova categoria</a>
    <hr>
    
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach( category => { %>
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title %></th>
                    <th><%= category.slug %></th>
                    <th>
                        <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar</a>
                        
                        <form method="POST" action="/categories/delete" class="d-inline" onsubmit="confirmarDelecao(event, this)">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-danger">Excluir</button>
                        </form>
                    </th>
                </tr>
            <% }) %>
        </tbody>
    </table>
    </div>

</body>
<%- include ('../../partials/footer.ejs') %> 
<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        let decision = confirm("Você quer deletar este artigo?");
        if(decision){
            form.submit();
        }
    }
</script>