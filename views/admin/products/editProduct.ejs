<%- include ('../../partials/header.ejs') %> 
<body>
    <%- include ('../../partials/navbar.ejs') %>
    <div class="container">
        <div class="card mt-3">
            <div class="card-header">
                <h2>Editar produto</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/products/update">
                    <input type="hidden" value="<%= product.id%>" name="id">
                    <input class="form-control mb-3" type="text" name="title" placeholder="Defina o novo título do produto" value="<%= product.title %>">
                    <textarea id="product" name="description" class="form-control" placeholder="Escreva a nova descrição" rows="5"><%- product.description %></textarea>
                    <label class="mt-2">Preço</label>
                    <input class="form-control" type="number" name="price" value="<%= product.price %>">
                    <label class="mt-3">Categoria</label>
                    <select name="category" class="form-control">
                        <% categories.forEach(category => { %>
                            <% if(category.id == product.categoryId){ %>
                                <option value="<%= category.id %>" selected> <%= category.title %></option>
                            <% }else{ %>
                                <option value="<%= category.id %>"> <%= category.title %></option>
                            <% } %>
                        <% }) %>
                    </select>
                    <button class="btn btn-success mt-3">Atualizar</button>
                </form>
            </div>
        </div>
    </div>    
</body>
<%- include ('../../partials/footer.ejs') %>
<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>
    tinymce.init({
        language: 'pt_BR',
        selector: '#product',
        branding: false,
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })
</script>